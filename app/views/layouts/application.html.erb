<!DOCTYPE html>
<html>
  <head>
    <title>Bookers7</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1 class="header-title">Bookers</h1>
      <div class="header-lists">
        <% if user_signed_in? %>
          <ul>
            <li class="header-list"><%= link_to 'Home', user_path(current_user.id) %></li>
            <li class="header-list"><%= link_to 'Users', users_path %></li>
            <li class="header-list"><%= link_to 'Books', book_images_path %></li>
            <li class="header-list"><%= link_to 'logout', destroy_user_session_path, method: :delete %></li>
          </ul>
        <% else %>
          <ul>
            <li class="header-list"><%= link_to 'Home', '/' %></li>
            <li class="header-list"><%= link_to 'About', about_path  %></li>
            <li class="header-list"><%= link_to 'sign up', new_user_registration_path %></li>
            <li class="header-list"><%= link_to 'login', new_user_session_path %></li>
          </ul>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
