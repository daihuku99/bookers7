<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'book_images/template', book_image_new: @book_image_new, user: @user %>
		</div>
		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>User</th>
						<th>Title</th>
						<th colspan="2"></th>
					</tr>
					<% @book_images.each do |book_image| %>
					<tr>
						<td><%= book_image.user.name %></td>
						<td><%= link_to book_image.title, book_image_path(book_image.id) %></td>
					</tr>
					<% end %>
				</thead>
			</table>
		</div>
	</div>
</div>