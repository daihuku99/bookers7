<h1>User info</h1>

<div class="profile-wrapper">
	<%= attachment_image_tag @user, :profile_image_id, :fill, 60, 60, format: "jpeg", fallback: "no_image.jpg" %>
	<div class="profile-text">
		<%= @user.name %>
		<%= @user.introduction %>
	</div>
</div>


<h1>New Book</h1>

<%= form_for(book_image_new, url: book_images_path) do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<h4>Image</h4>
<%= f.attachment_field :image %>

<%= f.submit 'Create Book' %>

<% end %>