<h1>User info</h1>

<div class="profile-wrapper">
	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: "jpeg", fallback: "no_image.jpg" %>
	<div class="profile-text">
		<label>NAME</label>
		<%= user.name %>
		<h4></h4>
		<%= user.introduction %>
	</div>
	<% if user.id == current_user.id %>
		<%= link_to 'edit', edit_user_path(current_user.id), class:"btn btn-default" %>
	<% end %>
</div>


<h1>New Book</h1>

<%= form_for(book_image_new, url: book_images_path) do |f| %>
<%= render'layouts/error_messages', model: f.object %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<h4>Image</h4>
<%= f.attachment_field :image %>

<%= f.submit 'Create Book', class:"btn btn-default" %>

<% end %>