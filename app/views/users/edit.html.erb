<h1>Editing Profile</h1>

<%= form_for(@user, url: user_path) do |f| %>
	<h4>Name</h4>
	<%= f.text_field :name %>

	<h4>Introduction</h4>
	<%= f.text_area :introduction %>

	<h4>Image</h4>
	<%= f.attachment_field :profile_image %>

	<%= f.submit 'Update Profile', class:"btn btn-default" %>
<% end %>
