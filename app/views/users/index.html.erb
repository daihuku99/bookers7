<div class="container">
	<div class="row">
		<div class="col-xs-3>">
			<%= render 'book_images/template', book_image_new: @book_image_new, user: @user %>
		</div>
		<div class="col-xs-9">
			<h1>Users</h1>
			<table class="table table-striped">
				<thead>
					<tr>
						<th></th>
						<th>Name</th>
						<th></th>
						<th colspan="3"></th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<% @users.each do |user| %>
							<td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg",  fallback: "no_image.jpg" %></td>
							<td><%= user.name %></td>
							<td><%= link_to 'Show', user_path(user.id) %></td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>